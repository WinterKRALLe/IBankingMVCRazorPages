@page
@model LoginModel

@{
    Layout = null;
}

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input asp-for="Model.UserName" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input asp-for="Model.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>